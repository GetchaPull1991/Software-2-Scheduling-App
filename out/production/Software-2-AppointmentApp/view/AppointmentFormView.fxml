<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="view.AppointmentFormController"
          prefHeight="400.0" prefWidth="600.0" hgap="10" vgap="10" fx:id="appointmentFormGridPane">
        <padding>
            <Insets top="10" bottom="20" left="20" right="10"/>
        </padding>
        <columnConstraints>
            <ColumnConstraints percentWidth="33"/>
            <ColumnConstraints percentWidth="33"/>
            <ColumnConstraints percentWidth="33"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints percentHeight="25"/>
            <RowConstraints percentHeight="70"/>
            <RowConstraints percentHeight="5"/>
        </rowConstraints>
        <VBox styleClass="formVbox" GridPane.rowIndex="0" GridPane.columnSpan="3" spacing="15">
            <padding>
                <Insets top="10" left="10" right="10" bottom="10"/>
            </padding>
            <HBox spacing="10">
                <Label text="Appointment ID: "/>
                <TextField fx:id="appointmentIDTextField" disable="true" text="ID is Auto-Generated"/>
                <Label text="Contact: "/>
                <ComboBox fx:id="appointmentContactComboBox"/>
                <Label text="Customer ID: "/>
                <ComboBox fx:id="appointmentCustomerIDComboBox"/>
            </HBox>
            <HBox spacing="10">
                <Label text="Title: "/>
                <TextField fx:id="appointmentTitleTextField"/>
                <Label text="User: "/>
                <TextField fx:id="appointmentUserTextField" disable="true" text="Current User"/>
                <Label text="Location: "/>
                <TextField fx:id="appointmentLocationTextField"/>
                <Label text="Type: "/>
                <TextField fx:id="appointmentTypeTextField"/>
            </HBox>
            <HBox spacing="10">
                <Label text="Start Date: " maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
                <DatePicker fx:id="appointmentStartDatepicker"/>
                <Label text="Start Time:"/>
                <ComboBox fx:id="startTimeComboBox"/>
                <Label text="End Date: "/>
                <DatePicker fx:id="appointmentEndDatepicker"/>
                <Label text="End Time: "/>
                <ComboBox fx:id="endTimeComboBox"/>
            </HBox>
            <HBox>
                <Label text="Description: "/>
                <TextArea fx:id="appointmentDescriptionTextArea"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="addAppointmentButton" text="Add Appointment"/>
            </HBox>

        </VBox>
        <!--Table to display the appointment data-->
        <TableView fx:id="appointmentDataTable" GridPane.rowIndex="1" GridPane.columnSpan="3">
            <placeholder>
                <Label text="There are no Appointments to display"/>
            </placeholder>
            <columns>
                <TableColumn fx:id="appointmentIDColumn" text="Appointment ID"/>
                <TableColumn fx:id="appointmentTitleColumn" text="Title"/>
                <TableColumn fx:id="appointmentDescriptionColumn" text="Description"/>
                <TableColumn fx:id="appointmentLocationColumn" text="Location"/>
                <TableColumn fx:id="appointmentContactColumn" text="Contact"/>
                <TableColumn fx:id="appointmentStartDateColumn" text="Start Date"/>
                <TableColumn fx:id="appointmentStartTimeColumn" text="Start Time"/>
                <TableColumn fx:id="appointmentEndDateColumn" text="End Date"/>
                <TableColumn fx:id="appointmentEndTimeColumn" text="End Time"/>
                <TableColumn fx:id="appointmentTypeColumn" text="Type"/>
                <TableColumn fx:id="appointmentCustomerIDColumn" text="Customer ID"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        <HBox GridPane.rowIndex="2" GridPane.columnSpan="3" spacing="10">
            <Label fx:id="errorLabel" styleClass="errorLabel" visible="false"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="appointmentDeleteButton" text="Delete Appointment"/>
            <Button fx:id="appointmentUpdateButton" text="Update Appointment"/>
        </HBox>
</GridPane>