<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.CustomerFormController"
            prefHeight="400.0" prefWidth="600.0" fx:id="mainUIBorderPane">

    <left>
        <VBox fx:id="sideMenuVBox" id="menuVBox" spacing="20">
            <Button fx:id="customerViewMenuButton" text="Customers" styleClass="menuButton" alignment="BASELINE_CENTER" maxWidth="Infinity"/>
            <Button fx:id="appointmentViewMenuButton" text="Appointments" styleClass="menuButton" alignment="BASELINE_CENTER" maxWidth="Infinity"/>
            <Button fx:id="reportViewMenuButton" text="Reports" styleClass="menuButton" alignment="BASELINE_CENTER" maxWidth="Infinity"/>
            <Region VBox.vgrow="ALWAYS"/>

            <VBox spacing="10">
                <padding>
                    <Insets left="10" right="10"/>
                </padding>
                <Label fx:id="currentTimeZoneLabel" alignment="BASELINE_LEFT" styleClass="menuLabel" wrapText="true"/>
                <Label fx:id="currentLocalTimeLabel" alignment="BASELINE_LEFT" styleClass="menuLabel" wrapText="true"/>
                <Label fx:id="currentUserLabel" alignment="BASELINE_LEFT" styleClass="menuLabel" wrapText="true"/>
            </VBox>

            <Button fx:id="logoutMenuButton" text="Logout" styleClass="menuButton" alignment="BASELINE_LEFT" maxWidth="Infinity"/>
        </VBox>
    </left>


    <center>
        <BorderPane fx:id="contentBorderPane">
            <top>
                <HBox spacing="10">
                    <padding>
                        <Insets top="10" right="15" left="20"/>
                    </padding>
                    <Label id="formLabel" fx:id="formLabel" text="Manage Customers"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button fx:id="menuControlButton" text="Hide Menu" alignment="BASELINE_RIGHT"/>
                </HBox>
            </top>
            <center>
                <GridPane fx:id="customerFormGridPane" hgap="10" vgap="10">
                    <padding>
                        <Insets top="10" bottom="5" left="20" right="10"/>
                    </padding>
                    <columnConstraints>
                        <ColumnConstraints percentWidth="33"/>
                        <ColumnConstraints percentWidth="33"/>
                        <ColumnConstraints percentWidth="33"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints percentHeight="25"/>
                        <RowConstraints percentHeight="70"/>
                        <RowConstraints percentHeight="5"/>
                    </rowConstraints>
                    <VBox styleClass="formVbox" GridPane.rowIndex="0" GridPane.columnSpan="3" spacing="25">
                        <padding>
                            <Insets top="10" left="10" right="10" bottom="5"/>
                        </padding>
                        <HBox spacing="10">
                            <Label text="ID: "/>
                            <TextField fx:id="customerIDTextField" disable="true" text="ID is Auto-Generated"/>
                            <Label text="Name: "/>
                            <TextField fx:id="customerNameTextField"/>
                            <Label text="Address: "/>
                            <TextField fx:id="customerAddressTextField"/>
                        </HBox>
                        <HBox spacing="10">
                            <Label text="Postal Code: "/>
                            <TextField fx:id="customerPostalCodeTextField"/>
                            <Label text="Phone: "/>
                            <TextField fx:id="customerPhoneTextField"/>
                        </HBox>
                        <HBox spacing="10">
                            <Label text="Country: "/>
                            <ComboBox fx:id="customerCountryComboBox"/>
                            <Label text="First-Level-Division: "/>
                            <ComboBox fx:id="customerDivisionComboBox" disable="true"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Button fx:id="customerSaveButton" text="Add Customer"/>
                        </HBox>
                    </VBox>

                    <!--Table to display the customer data-->
                    <TableView fx:id="customerDataTable" GridPane.rowIndex="1" GridPane.columnSpan="3">
                        <placeholder>
                            <Label text="There are no Customers to display"/>
                        </placeholder>
                        <columns>
                            <TableColumn fx:id="customerIDColumn" text="ID"/>
                            <TableColumn fx:id="customerNameColumn" text="Name"/>
                            <TableColumn fx:id="customerAddressColumn" text="Address"/>
                            <TableColumn fx:id="customerPostalCodeColumn" text="Postal Code"/>
                            <TableColumn fx:id="customerPhoneColumn" text="Phone"/>
                            <TableColumn fx:id="customerCountryColumn" text="Country"/>
                            <TableColumn fx:id="customerDivisionColumn" text="Division"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                    <HBox GridPane.rowIndex="2" GridPane.columnSpan="3" spacing="10">
                        <Label fx:id="errorLabel" styleClass="errorLabel" visible="false"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button fx:id="customerDeleteButton" text="Delete Customer"/>
                        <Button fx:id="customerUpdateButton" text="Update Customer"/>
                    </HBox>
                </GridPane>
            </center>
        </BorderPane>
    </center>
</BorderPane>
